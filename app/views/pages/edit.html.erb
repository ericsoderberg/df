<h1>Editing page</h1>

<% form_for(@page) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name, :size => 40 %>
  </p>
  <%= render :partial => '/data_files/list' %>
  <p>
    <%= f.label :contents -%>
    <%= markdown_help -%>
    <br />
    <%= f.text_area :contents, :size => '80x20' %>
  </p>
  <p>
    <%= f.submit "Update" %> |
    <%= link_to 'Cancel', page_alias_path(:name => @page.name.parameterize),
      :class => 'admin' %>
  </p>
<% end %>
