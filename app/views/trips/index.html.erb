<h1>Listing trips</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Start at</th>
    <th>Stop at</th>
  </tr>

<% for trip in @trips %>
  <tr>
    <td><%=h trip.name %></td>
    <td><%=h trip.description %></td>
    <td><%=h trip.start_at %></td>
    <td><%=h trip.stop_at %></td>
    <td><%= link_to 'Show', trip %></td>
    <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
    <td><%= link_to 'Destroy', trip, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

