<h1>New relationship</h1>

<% form_for(@ministry) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name, :size => 40 %>
  </p>
  <p>
    <%= f.label :url %><br />
    <%= f.text_field :url, :size => 80 %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description, :size => "80x6" %>
  </p>
  <p>
    <%= f.submit "Create" %> |
    <%= link_to 'Cancel', ministries_path, :class => 'admin' %>
  </p>
<% end %>

