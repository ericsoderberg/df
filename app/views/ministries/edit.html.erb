<h1>Editing relationship</h1>

<% form_for(@ministry) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name, :size => 40 %>
  </p>
  <p>
    <%= f.label :url %><br />
    <%= f.text_field :url, :size => 60 %>
  </p>
  
  <%= render :partial => '/data_files/list' %>
  
  <p>
    <%= f.label :description %><%= markdown_help %><br />
    <%= f.text_area :description, :size => '80x20' %>
  </p>
  <p>
    <%= f.label :code %><br />
    <%= f.text_field :code, :size => 4 %>
  </p>
  <p>
    <%= f.submit "Update" %> |
    <%= link_to 'Cancel', ministry_path(@ministry),
      :class => 'admin' %>
  </p>
<% end %>

<% form_for(@location_ministry,
	:url => ministry_locations_path(@ministry)) do |f| -%>
	<div id="map_container">
	<% for location in @ministry.locations do -%>
		<%= image_submit_tag('star.gif',
			:style => "position: absolute; top: #{location.y - 8}px; left: #{location.x - 8}px", :name => "delete-#{location.x}-#{location.y}-") %>
	<% end -%>
	<%= image_submit_tag 'world_map.jpg' %>
	</div>
<% end -%>

